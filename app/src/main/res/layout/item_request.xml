<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/RequestImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="15dp"

        android:src="@drawable/user_img" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@id/RequestImage"
        android:layout_toRightOf="@+id/RequestImage">


        <TextView
            android:id="@+id/RequestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginBottom="9dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="Display Name" />

        <TextView
            android:id="@+id/textViewSingleListStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/circleImageViewUserImage"
            android:text="User Status"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:layout_toEndOf="@+id/circleImageViewUserImage"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/circleImageViewUserImage" />

    </LinearLayout>


    <Button
        android:id="@+id/positive_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0.1dp" />

    <Button
        android:id="@+id/negative_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/positive_response"
        android:layout_marginBottom="1dp" />


</RelativeLayout>